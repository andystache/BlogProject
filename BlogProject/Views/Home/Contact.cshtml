@model BlogProject.Models.EmailModel

<div class="container-fluid">
    <div class="row">
        <div class="offset-2 col-md-8">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h4>Send me a message.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "This is the topic" })
                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Body, new { @class = "form-control", id = "RTE", placeholder = "This is what you have to say" })
                        @Html.ValidationMessageFor(m => m.Body)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Send" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript -->
<script src="~/Scripts/jquery.min.js"></script>


<!-- Custom scripts for this template -->
<script src="~/Scripts/clean-blog.min.js"></script>


<script>
    $(document).ready(function () {
        var imageUrl = "/Images/contact-bg.jpg";
        $(".masthead").css("background-image", "url(" + imageUrl + ")");
        $('#topText').text("Contact Andrew");
        $('#subText').text("Send me an email without the risk of Outlook loading!");
    });
</script>